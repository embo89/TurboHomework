@model Homework_9.Pages.CardType

<turbo-frame id="cardtype_@Model.Id">
  <form method="post" data-turbo-frame="_top">
    <input type="hidden" asp-for="@Model.Id" hidden />
    <div class=" mx-2 my-2  rounded-md  border border-gray-500 rounded  rounded-sm px-2 py-2">     
    <div class="grid grid-cols-3 mx-2  justify-center ">
    <div class="text-center">
      <input type="text" class="text-left border border-gray-500" asp-for="@Model.Description"/>   
    </div>
    <div>
     <input type="image" src="~/dist/images/cancel.png"   class="h-5" asp-page="/Types" asp-page-handler="CancelCardType" asp-route-id="@Model.Id"/>
     </div>
      <div>
     <input type="image" src="~/dist/images/save.png"   class="h-5" asp-page="/Types" asp-page-handler="SaveCardType" asp-route-id="@Model.Id"/>
     </div>
  </div>
    <div class="flex text-left py-2 px-2" >
   <div class="text-left px-2"><p>Ziyaret Edilebilir : </p></div> <div class="text-left px-2"><input type="checkbox" readonly asp-for="@Model.IsVisitible"/></div>   </div>    
    <div class="flex text-left py-2 px-2" >
    <div class="text-center px-2"> <p>Lokasyon Zorunlu :</p>  </div> <div div class="text-left px-2"><input type="checkbox" readonly asp-for="@Model.IsLocationRequired"/></div>
   </div>
  <div class="flex text-left py-2 px-2" > <div class="text-center px-2"> <p>
     Kullanıcı Hesabı : </p>  </div> <div div class="text-left px-2"> <input type="checkbox" readonly asp-for="@Model.IsUserAccount"/></div>

  </div>
</div>
  </form>
</turbo-frame>