@model Homework_9.Pages.CardType

<turbo-frame id="cardtype_@Model.Id">
  <form method="post" >
    <input type="hidden" asp-for="@Model.Id" hidden />
    <div class=" border border-gray-200 rounded-md mx-2 my-2 pt-4">     
      <div class="flex py-2">
        <div class="basis-3/5 pl-2">
          <input type="text" class="appearance-none  relative  px-3 py-2 border border-gray-300  placeholder-gray-300 text-gray-900 rounded-t-md sm:text-sm" placeholder="Tanım" asp-for="@Model.Description"/>   
        </div>
      <div class="basis-2/5 text-right pl-2 pr-4">
          <input type="image" src="~/dist/images/cancel.png"   class="h-3" asp-page="/Types" asp-page-handler="CancelCardType" asp-route-id="@Model.Id"/>      
          <input type="image" src="~/dist/images/save.png"   class="h-3" asp-page="/Types" asp-page-handler="SaveCardType" asp-route-id="@Model.Id"/>
      </div>
     </div>

     
       <div class="grid grid-cols-2">
         <div> 
           <span class="appearance-none   px-3 py-2  text-gray-500  sm:text-sm">Ziyaret Edilebilir: </span>
         </div>
         <div>
            <input type="checkbox" readonly asp-for="@Model.IsVisitible"/>
         </div>
      
     </div>
     
       <div class="grid grid-cols-2">
         <div> 
           <span class="appearance-none   px-3 py-2  text-gray-500  sm:text-sm">Lokasyon Zorunlu: </span>
         </div>
         <div>
            <input type="checkbox" readonly asp-for="@Model.IsLocationRequired"/>
         </div>
      
     </div>
       
       <div class="grid grid-cols-2">
         <div> 
           <span class="appearance-none   px-3 py-2  text-gray-500  sm:text-sm">Kullanıcı Hesabı: </span>
         </div>
         <div>
            <input type="checkbox" readonly asp-for="@Model.IsUserAccount"/>
         </div>
       
     </div>

   
     </div>
   
  </form>
</turbo-frame>